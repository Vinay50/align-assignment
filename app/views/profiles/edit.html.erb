<div class="container">
  <div class="user_forms">
    <ul class="nav nav-tabs text-center" role="tablist">
      <li role="presentation" class="active">
        <a href="#profile" aria-controls="home" role="tab" data-toggle="tab">Profile</a></li>
      <li role="presentation"><%= link_to "Change  Password", edit_user_registration_path %></li>
    </ul>
    <div class="tab-content">
      <div role="tabpanel" class="tab-pane active" id="profile">
        <div class="row">
          <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-12 set_priority_edit">
            <h3 class="text-center">Staff Details</h3></br>
            <%= form_for @user, url: {action: "update"}, html: {multipart: true} do |f| %>
              <div class="form-group required">
                <label for="firstname" class="control-label "> Name:</label>
                <%= f.text_field :name, :class => 'form-control' %>
              </div>

              <div class="form-group required">
                <label for="email" class="control-label ">Email:</label>
                <%= f.text_field :email, :class => 'form-control' %>
              </div>

              <div class="form-group required">
                <label for="phno" class="control-label ">Fields required for booking</label>
              </div>

              <div class="form-group">
                <%= f.submit "Update", :class => "btn btn-success form-control" %>
              </div>
            <% end %>
            <hr>
          </div>
        </div>
      </div>
    </div>
  </div>


<script type="text/javascript">
  $(document).ready(function () {
    var today = new Date();
    $('#datetimepicker').datetimepicker({
      format: 'DD/MM/YYYY',
      maxDate: today
    });
  });
</script>
