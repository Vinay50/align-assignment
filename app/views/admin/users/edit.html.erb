<div class="tab-content">
  <div role="tabpanel" class="tab-pane active" id="profile">
    <div class="row">
      <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-12 back-ground user-forms">
      <h3 class="text-center header_color">Activate/Deactive User</h3>
      <%= form_for @user, url: admin_user_path do |f| %>
        <div class="form-group">
          <%= f.label :active %>
          <%= f.check_box :active %>
        </div>
        <div class="form-actions">
         <%= submit_tag("Deactive", :class => "btn btn-success form-control", :name => "submit") %>
        </div>
      <% end %>
      <%= link_to "Back", :back %>
    </div>
  </div>
</div>


